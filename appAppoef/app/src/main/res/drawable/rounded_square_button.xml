<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Definindo a forma do botão como retângulo -->
    <corners android:radius="12dp" /> <!-- Define o raio das bordas arredondadas -->

    <!-- Cor de fundo do botão -->
    <solid android:color="@color/bege" /> <!-- Cinza claro -->

    <!-- Borda do botão -->
    <stroke
        android:width="2dp"
        android:color="@color/azul_escuro" /> <!-- Cor e espessura da borda -->

    <!-- Tamanho fixo do botão -->
    <size
        android:width="80dp"
        android:height="80dp" /> <!-- Aqui você pode ajustar o tamanho para quadrado -->
</shape>
